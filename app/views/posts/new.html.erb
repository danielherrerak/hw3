<h1> New Post </h1>

<%= form_with :model => @post do |form| %>
    <h3>
        <%= form.label "title" %>
        <%= form.text_field "title" %>
    </h3>
    
    <h3>
        <%= form.label "description" %>
        <%= form.text_field "description" %>
    </h3>
  
    <h3>
        <%= form.label "posted_on" %>
        <%= form.date_field "posted_on" %>
    </h3>
   
    <h3>
        <%= form.hidden_field "place_id" %>
        <%= form.submit %>
    </h3>

<% end %>

<h4>
    <b> <a href = "/places" > Back to all Places </a> </b>
</h4>